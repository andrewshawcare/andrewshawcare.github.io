{
  "type": "module",
  "engines": {
    "node": "^20.10.0"
  },
  "scripts": {
    "compile-json-schemas": "node --import ./register-hooks.js compile-json-schemas.ts",
    "build": "npm run compile-json-schemas && node --import ./register-hooks.js build.ts",
    "watch-build": "chokidar 'index.ts' 'compile.ts' 'content' 'static' 'tags' 'templates' 'schemas/template.ejs' 'schemas/**/*.json' --initial --command 'npm run build && touch ./reload/reload.now'",
    "serve": "reload --dir dist --watch-dir reload --exts now",
    "develop": "concurrently --kill-others-on-fail 'npm:serve' 'npm:watch-build'"
  },
  "devDependencies": {
    "@markdoc/markdoc": "0.4.0",
    "@mermaid-js/mermaid-cli": "10.7.0",
    "@types/ejs": "3.1.5",
    "@types/js-yaml": "4.0.9",
    "ajv": "8.12.0",
    "chokidar-cli": "3.0.0",
    "concurrently": "8.2.2",
    "ejs": "3.1.9",
    "glob": "10.3.10",
    "json-schema-to-ts": "3.0.0",
    "js-yaml": "4.1.0",
    "reload": "3.2.1",
    "is-relative-url": "4.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  }
}
