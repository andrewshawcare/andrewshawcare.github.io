{
  "type": "module",
  "engines": {
    "node": "^20.10.0"
  },
  "scripts": {
    "build": "node index.js",
    "watch-build": "chokidar \"content/**/*.md\" \"static/**/*\" --initial --command \"npm run build && touch ./reload/reload.now\"",
    "serve": "reload --dir dist --watch-dir reload --exts now",
    "develop": "concurrently --kill-others-on-fail \"npm:serve\" \"npm:watch-build\""
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "10.6.1",
    "chokidar-cli": "3.0.0",
    "concurrently": "8.2.2",
    "ejs": "3.1.9",
    "glob": "10.3.10",
    "reload": "3.2.1",
    "is-relative-url": "4.0.0",
    "@markdoc/markdoc": "0.4.0",
    "typescript": "5.3.3"
  }
}
