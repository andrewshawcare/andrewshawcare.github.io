{
  "type": "module",
  "engines": {
    "node": "^20.10.0"
  },
  "scripts": {
    "build": "node index.js",
    "watch-build": "chokidar \"content/**/*.md\" \"static/**/*\" -c \"npm run build\"",
    "livereload": "livereload ./dist -w 1000",
    "serve": "http-server ./dist",
    "develop": "concurrently \"npm:serve\" \"npm:livereload\" \"npm:watch-build\""
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "10.6.1",
    "chokidar-cli": "3.0.0",
    "concurrently": "8.2.2",
    "ejs": "3.1.9",
    "glob": "10.3.10",
    "http-server": "14.1.1",
    "livereload": "0.9.3",
    "is-relative-url": "4.0.0",
    "@markdoc/markdoc": "0.4.0",
    "typescript": "5.3.3"
  }
}
