{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "frontmatter": {
      "$ref": "#/$defs/frontmatter"
    },
    "contentDir": {
      "type": "string"
    },
    "outputDir": {
      "type": "string"
    }
  },
  "required": ["frontmatter", "contentDir", "outputDir"],
  "additionalProperties": false,
  "$defs": {
    "frontmatter": {
      "$ref": "frontmatter.json"
    }
  }
}
