{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "frontmatter": {
      "$ref": "#/$defs/frontmatter"
    },
    "sourceDirectory": {
      "type": "string"
    },
    "destinationDirectory": {
      "type": "string"
    },
    "contentDirectory": {
      "type": "string"
    },
    "filename": {
      "type": "string"
    },
    "content": {
      "type": "object"
    }
  },
  "required": [
    "frontmatter",
    "sourceDirectory",
    "contentDirectory",
    "destinationDirectory",
    "filename"
  ],
  "additionalProperties": false,
  "$defs": {
    "frontmatter": {
      "$ref": "frontmatter.json"
    }
  }
}
